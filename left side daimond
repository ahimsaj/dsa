// left side daimond
#include <iostream>
using namespace std;

int main() 
{
    int i,j,k,n;
    cout<<"enter no. of rows:";
    cin>>n;
    for(i=0;i<n;i++)
    {
	    for(j=0;j<n-i;j++){
		        printf(" ");
		}
	    for(k=0;k<=i;k++){
		        printf("*");
		}
		printf("\n");
    }
    for(i=n-1;i>0;i--)
    {
	    for(j=n;j>=i;j--){
	    	printf(" ");
	    }
	    for(k=i;k>0;k--){
		    printf("*");
	    }
	    printf("\n");
    }
    return 0;
}
